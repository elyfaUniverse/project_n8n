<script>
  // ========== КОНФИГУРАЦИЯ ==========
  const WEBHOOK_URL = 'https://project-n8n-elyfa.amvera.io/webhook/a454dc8e-8fc7-4cc6-bc28-da352f100428/chat';
  
  // ========== ПЕРЕМЕННЫЕ ==========
  let userId = localStorage.getItem('neural_user_id');
  let sessionId = localStorage.getItem('neural_session_id');
  let messageHistory = JSON.parse(localStorage.getItem('neural_history') || '[]');
  
  // Инициализация
  if (!userId) {
    userId = 'NEURAL_' + Date.now() + '_' + Math.random().toString(36).substr(2, 9).toUpperCase();
    localStorage.setItem('neural_user_id', userId);
  }
  
  if (!sessionId) {
    sessionId = 'SESSION_' + Date.now() + '_' + Math.random().toString(36).substr(2, 6).toUpperCase();
    localStorage.setItem('neural_session_id', sessionId);
  }
  
  console.log('???? Нейронный пользователь:', userId);
  console.log('⚡ Сессия:', sessionId);
  
  //  ФУНКЦИИ ДЛЯ СООБЩЕНИЙ 
  function addMessage(text, isUser = false, timestamp = new Date()) {
    const chatWindow = document.getElementById('chat-window');
    const messageId = 'msg_' + Date.now();
    
    const messageDiv = document.createElement('div');
    messageDiv.className = `message ${isUser ? 'user-message' : 'bot-message'}`;
    messageDiv.id = messageId;
    
    // Добавляем иконку для сообщений бота
    let messageContent = escapeHtml(text);
    if (!isUser) {
      messageContent = `<span style="display: inline-block; animation: pulseDot 2s infinite; margin-right: 8px; color: #ab47bc;">●</span>${messageContent}`;
    }
    
    messageDiv.innerHTML = `
      ${messageContent}
      <div class="message-time">${formatTime(timestamp)}</div>
    `;
    
    chatWindow.appendChild(messageDiv);
    
    // Плавная прокрутка
    setTimeout(() => {
      chatWindow.scrollTo({
        top: chatWindow.scrollHeight,
        behavior: 'smooth'
      });
    }, 100);
    
    // Сохраняем в историю
    messageHistory.push({
      id: messageId,
      text: text,
      isUser: isUser,
      timestamp: timestamp.toISOString()
    });
    
    // Сохраняем историю (последние 100 сообщений)
    if (messageHistory.length > 100) {
      messageHistory = messageHistory.slice(-100);
    }
    localStorage.setItem('neural_history', JSON.stringify(messageHistory));
    
    return messageId;
  }
  
  function showTypingIndicator(show) {
    const indicator = document.getElementById('typing-indicator');
    if (indicator) {
      indicator.style.display = show ? 'flex' : 'none';
      if (show) {
        indicator.style.animation = 'messageAppear 0.3s ease';
      }
    }
    if (show) {
      const chatWindow = document.getElementById('chat-window');
      setTimeout(() => {
        chatWindow.scrollTo({
          top: chatWindow.scrollHeight,
          behavior: 'smooth'
        });
      }, 100);
    }
  }
  
  function showError(message) {
    const errorMsg = document.getElementById('error-message');
    errorMsg.innerHTML = `⚠️ ${escapeHtml(message)}`;
    errorMsg.style.display = 'block';
    errorMsg.style.animation = 'messageAppear 0.3s ease';
  }
  
  function showSuccess(message) {
    const successMsg = document.getElementById('success-message');
    successMsg.innerHTML = `✓ ${escapeHtml(message)}`;
    successMsg.style.display = 'block';
    successMsg.style.animation = 'messageAppear 0.3s ease';
  }
  
  function formatTime(date) {
    const now = new Date();
    const diff = now - date;
    
    if (diff < 10000) return 'Только что';
    if (diff < 60000) {
      const seconds = Math.floor(diff / 1000);
      return `${seconds} сек назад`;
    }
    if (diff < 3600000) {
      const minutes = Math.floor(diff / 60000);
      return `${minutes} мин назад`;
    }
    
    return date.toLocaleTimeString('ru-RU', {
      hour: '2-digit',
      minute: '2-digit',
      hour12: false
    });
  }
  
  function escapeHtml(text) {
    const div = document.createElement('div');
    div.textContent = text;
    return div.innerHTML;
  }
  
  // ========== ОСНОВНАЯ ФУНКЦИЯ ОТПРАВКИ ==========
  async function sendMessage() {
    const input = document.getElementById('chat-input');
    const button = document.getElementById('send-button');
    const errorMsg = document.getElementById('error-message');
    const successMsg = document.getElementById('success-message');
    
    const message = input.value.trim();
    
    if (!message) {
      showError('Введите запрос для нейросети');
      return;
    }
    
    if (message.length > 2000) {
      showError('Запрос слишком длинный (максимум 2000 символов)');
      return;
    }
    
    // Сохраняем оригинальное значение для анимации
    const originalValue = input.value;
    input.value = '';
    
    // Блокируем интерфейс
    button.disabled = true;
    errorMsg.style.display = 'none';
    successMsg.style.display = 'none';
    
    // Показываем сообщение пользователя с анимацией
    addMessage(originalValue, true);
    
    // Показываем индикатор набора
    showTypingIndicator(true);
    
    try {
      console.log('???? Отправка нейронного запроса на:', WEBHOOK_URL);
      
      const requestData = {
        message: originalValue,
        sessionId: sessionId,
        userId: userId,
        timestamp: new Date().toISOString(),
        source: 'neural_interface_v2',
        version: '2.1'
      };
      
      const response = await fetch(WEBHOOK_URL, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'Accept': 'application/json'
        },
        body: JSON.stringify(requestData)
      });
      
      console.log('???? Получен ответ. Статус:', response.status);
      
      if (!response.ok) {
        const errorText = await response.text();
        throw new Error(`Нейронная сеть вернула ошибку ${response.status}: ${errorText}`);
      }
      
      // Читаем ответ
      const responseText = await response.text();
      
      // Скрываем индикатор
      showTypingIndicator(false);
      
      try {
        const data = JSON.parse(responseText);
        console.log('✅ РАСПАРСЕННЫЙ ответ:', data);
        
        let botReply = '';
        
        // Обрабатываем разные форматы ответа
        if (data.response && data.response.body) {
          try {
            const nestedData = JSON.parse(data.response.body);
            botReply = nestedData.aiResponse || nestedData.reply || 'Нейросеть обработала запрос';
          } catch (nestedError) {
            console.error('❌ Ошибка парсинга вложенных данных:', nestedError);
            botReply = data.response.body.substring(0, 200);
          }
        } else if (data.aiResponse) {
          botReply = data.aiResponse;
        } else if (data.reply) {
          botReply = data.reply;
        } else if (data.message) {
          botReply = data.message;
        } else {
          botReply = 'Запрос успешно обработан нейросетью';
        }
        
        console.log('???? Ответ нейросети:', botReply.substring(0, 100) + '...');
        
        // Показываем ответ от бота
        addMessage(botReply, false);
        
        // Показываем успешное сообщение
        showSuccess('Запрос обработан нейронной сетью');
        
      } catch (parseError) {
        console.error('❌ Ошибка парсинга JSON:', parseError);
        addMessage('Ошибка декодирования нейронного ответа. Проверьте конфигурацию сети.', false);
        showError('Ошибка обработки нейронного ответа');
      }
      
    } catch (error) {
      console.error('❌ Нейронная ошибка:', error);
      showTypingIndicator(false);
      
      let errorText = '';
      if (error.message.includes('HTTP 500')) {
        errorText = 'Внутренняя ошибка нейросети';
      } else if (error.message.includes('Failed to fetch')) {
        errorText = 'Потеряно соединение с нейросетью';
      } else if (error.message.includes('NetworkError')) {
        errorText = 'Сетевой сбой. Проверьте подключение';
      } else {
        errorText = error.message;
      }
      
      showError(errorText);
      addMessage('⚠️ Нейросеть временно недоступна. Попробуйте позже.', false);
      
    } finally {
      button.disabled = false;
      input.focus();
      
      // Очищаем сообщения через 5 секунд
      setTimeout(() => {
        errorMsg.style.display = 'none';
        successMsg.style.display = 'none';
      }, 5000);
    }
  }
  
  // ========== ОБРАБОТЧИКИ СОБЫТИЙ ==========
  document.getElementById('chat-input').addEventListener('keypress', function(e) {
    if (e.key === 'Enter' && !e.shiftKey) {
      e.preventDefault();
      sendMessage();
    }
  });
  
  document.getElementById('chat-input').addEventListener('keyup', function(e) {
    const button = document.getElementById('send-button');
    const hasText = this.value.trim().length > 0;
    button.disabled = !hasText;
    button.style.opacity = hasText ? '1' : '0.7';
  });
  
  document.getElementById('chat-input').addEventListener('focus', function() {
    this.style.boxShadow = '0 0 0 2px rgba(66, 133, 244, 0.4), inset 0 0 20px rgba(66, 133, 244, 0.1)';
  });
  
  document.getElementById('chat-input').addEventListener('blur', function() {
    this.style.boxShadow = '';
  });
  
  // ========== ИНИЦИАЛИЗАЦИЯ ==========
  document.addEventListener('DOMContentLoaded', function() {
    // Обновляем время приветственного сообщения
    document.getElementById('init-time').textContent = formatTime(new Date());
    
    // Фокус на поле ввода
    const input = document.getElementById('chat-input');
    input.focus();
    
    // Загружаем историю сообщений
    if (messageHistory.length > 0) {
      console.log('???? Загрузка истории сообщений:', messageHistory.length);
      messageHistory.forEach(msg => {
        // Пропускаем приветственное сообщение
        if (!msg.text.includes('Готов к диалогу')) {
          addMessage(msg.text, msg.isUser, new Date(msg.timestamp));
        }
      });
    }
    
    console.log('???? Нейронный интерфейс запущен. Webhook:', WEBHOOK_URL);
    
    // Добавляем системное сообщение о загрузке
    setTimeout(() => {
      const chatWindow = document.getElementById('chat-window');
      chatWindow.scrollTo({
        top: chatWindow.scrollHeight,
        behavior: 'smooth'
      });
    }, 500);
  });
  
  // Экспортируем функцию для отладки
  window.debugChat = function() {
    console.log({
      userId: userId,
      sessionId: sessionId,
      historyCount: messageHistory.length,
      webhookUrl: WEBHOOK_URL
    });
  };
   
</script>
